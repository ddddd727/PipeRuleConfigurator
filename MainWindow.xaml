<Window x:Class="PipeRuleConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:PipeRuleConfigurator.Views"
        Title="管系规则配置" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <materialDesign:Card UniformCornerRadius="0" Padding="0">
        <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid"

                    Style="{StaticResource MaterialDesignFilledTabControl}">

            <TabItem Header="字典定义">
                <views:DictionaryView/>
            </TabItem>

            <TabItem Header="基础类">
                <TextBlock Text="基础类开发中..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>

            <TabItem Header="Spec配置">
                <TextBlock Text="Spec配置开发中..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </TabItem>

        </TabControl>
    </materialDesign:Card>
</Window>